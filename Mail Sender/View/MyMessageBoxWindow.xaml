<Window x:Class="Mail_Sender.View.MyMessageBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MyMessageBoxWindow" Height="450" Width="400" MinWidth="500">
    <Grid Background="#FF4E4E4C">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="36"/>
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="0">
            <StackPanel  x:Name="errorPanel"/>
        </ScrollViewer>
        <Button Grid.Row="1" Height="33" Width="Auto" Margin="10 3 10 3" Click="ButtonReady_OnClick">
                <DockPanel>
                    <Viewbox   VerticalAlignment="Center" 
                               HorizontalAlignment="Left"
                               Margin="2 2 2 2" 
                               Width="27" Height="27">
                        <Path Width="20" Height="20"
                              Stretch="Fill"
                              Data="{StaticResource checkStyle0}" 
                              Stroke="#FFFD9804"/>
                    </Viewbox>
                    <TextBlock Text="Понятно" VerticalAlignment="Center" Margin="10 0 10 0"/>
                </DockPanel>
        </Button>
    </Grid>
</Window>
